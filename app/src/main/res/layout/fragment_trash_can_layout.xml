<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_1"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".TrashCanLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_choose"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@color/blue_press"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:textSize="8dp"
            android:text="Choose"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_delete_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_choose"
            android:layout_alignParentLeft="true"
            android:text="Delete Recently"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:orientation="vertical">


        <GridView
            android:id="@+id/grid_view_trashcan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:numColumns="3"
            android:verticalSpacing="2dp" />

        <TextView
            android:id="@+id/txt_display_total_picture_deleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Total :94"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/last_linear_in_trashcan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_delete_chosen_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete All"
            android:layout_marginRight="50dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_restore_chosen_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Restore All"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>