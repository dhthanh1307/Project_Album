<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btn_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="clickAllLayout"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_all"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/all_icon_foreground" />

        <TextView
            android:id="@+id/txt_icon_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="All"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="clickAlbumLayout"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_album"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/album_icon_foreground" />

        <TextView
            android:id="@+id/txt_icon_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Album"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_favorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="clickFavoriteLayout"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/favorite_icon_foreground" />

        <TextView
            android:id="@+id/txt_icon_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Favorite"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_trashcan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="clickTrashCanLayout"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_trashcan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/trash_can_icon_foreground" />

        <TextView
            android:id="@+id/txt_icon_trashcan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Trash Can"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="clickAccountLayout"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/account_icon_foreground" />

        <TextView
            android:id="@+id/txt_icon_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Account"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>